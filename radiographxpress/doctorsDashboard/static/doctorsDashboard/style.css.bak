@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background-color: #f4f4f4;
}

/* Navbar container */
.navbar {
    width: 100%;
    height: 60px;
    /* Approx 59px */
    background-color: #000000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
    box-sizing: border-box;
}

/* Left Section: Logo */
.navbar-left {
    display: flex;
    align-items: center;
}

.navbar-logo {
    height: 35px;
    width: auto;
    object-fit: contain;
}

/* Center Section: Navigation Links */
.navbar-center {
    flex-grow: 1;
    display: flex;
    padding-left: 50px;
    /* Slight separation from logo */
}

.nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 30px;
}

.nav-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    /* Inter Regular */
    opacity: 0.9;
    transition: opacity 0.2s ease;
}

.nav-link:hover {
    opacity: 1;
    font-weight: 500;
}

/* Right Section: User Info */
.navbar-right {
    display: flex;
    align-items: center;
    gap: 20px;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 15px;
    /* Space between name and avatar */
    color: #ffffff;
}

.welcome-text {
    font-size: 12px;
    font-weight: 400;
    text-align: right;
    white-space: nowrap;
}

.user-avatar {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: #ccc;
    /* Fallback */
    object-fit: cover;
}

/* Login Page Styles */
.login-body {
    background-color: white;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-container {
    width: 515px;
    height: 679px;
    position: relative;
}

.login-card-bg {
    position: absolute;
    width: 403px;
    height: 597px;
    left: 56px;
    top: 41px;
    background: #E9E9E9;
    box-shadow: 10px 10px 50px 1px rgba(0, 0, 0, 0.25);
    border-radius: 53px;
    z-index: 1;
}

.login-logo-img {
    width: 186px;
    height: 186px;
    position: absolute;
    left: 164px;
    top: 62px;
    z-index: 2;
    object-fit: contain;
}

.login-form input {
    width: 403px;
    height: 45px;
    background: #FCFCFC;
    border: none;
    position: absolute;
    left: 56px;
    padding-left: 20px;
    box-sizing: border-box;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #000;
    font-weight: 300;
    z-index: 2;
}

.login-form input::placeholder {
    color: #939393;
}

.login-form input:focus {
    outline: 2px solid #FF93F2;
}

.input-email {
    top: 291px;
}

.input-password {
    top: 366px;
}

.forgot-password {
    position: absolute;
    left: 272px;
    /* Adjusted to approximate visual location or use flex */
    top: 427px;
    color: #939393;
    font-size: 16px;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    text-decoration: none;
    z-index: 2;
}

.login-submit-btn {
    width: 403px;
    height: 43px;
    background: #FF93F2;
    border: none;
    position: absolute;
    left: 56px;
    top: 537px;
    color: white;
    font-size: 24px;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    cursor: pointer;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-submit-btn:hover {
    opacity: 0.9;
}